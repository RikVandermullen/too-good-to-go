@model Packet

<head>
    <title>Reserveren</title>
</head>

<div class="modal fade" id="reserve-packet" tabindex="-1" aria-labelledby="reserve-packet" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Model.Name</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="ReservePacket" asp-controller="Packet" method="post">
                <div class="modal-body">
                    <div class="row">
                        <input asp-for="@Model.Id" value="@Model.Id" type="hidden" />
                        <p>Weet je zeker dat je dit pakket wil reserveren?</p> <br />
                        <p>
                            Let op! Wanneer je dit pakket reserveerd, kan je dit niet ongedaan maken.
                        </p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="button-green shadow smaller"><span>Reserveren</span></button>
                </div>
            </form>
        </div>
    </div>
</div>
