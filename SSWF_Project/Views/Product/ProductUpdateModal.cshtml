@model Product
@{
}
<head>
    <title>Beheer</title>
</head>

<div class="modal fade" id="@Model.Name.Replace(" ", "")" tabindex="-1" aria-labelledby="@Model.Name.Replace(" ", "")" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    Product: @Model.Name
                </h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="row">
                        <input asp-for="@Model.Id" type="hidden" class="form-input" value="@Model.Id" />
                        <div class="col-12 input-wrap">
                            <label asp-for="@Model.Name">Naam</label><br />
                            <input asp-for="@Model.Name" type="text" class="form-input" value="@Model.Name" />
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-12 input-wrap">
                            <label asp-for="@Model.Image">Foto</label><br />
                            <input asp-for="@Model.Image" type="text" class="form-input" value="@Model.Image" />
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-12 mt-3">
                            <div class="col-lg-12">
                                <input asp-for="@Model.HasAlcohol" type="checkbox" class="contains-alcohol" />
                                <label asp-for="@Model.HasAlcohol" for="checkbox">Bevat alcohol</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="button-disabled" disabled><span>Opslaan</span></button>
                </div>
            }
        </div>
    </div>
</div>
